.post-list{list-style:none;padding:0;margin:var(--baseline)0}.post-list li{margin-bottom:var(--baseline)}.post-list h2{font-size:1.5rem;font-family:var(--sans);font-weight:400;line-height:1.25;margin:0}.post-list a{color:inherit;text-decoration:none;border-bottom:none}.post-list a:hover{color:var(--etreacy-ui-colors-primary)!important}.post-item{margin-bottom:1.5rem}.post-item a{color:inherit;text-decoration:none;border-bottom:none;font-size:1.1rem;line-height:1.4}.post-item a:hover{color:var(--etreacy-ui-colors-primary)!important;text-decoration:none;font-weight:400}.date{padding-bottom:1.25rem;font-style:italic;font-family:var(--sans);font-size:.8rem;opacity:.7}h1{padding-bottom:1rem}.post-meta{font-family:var(--sans);font-size:.8rem;color:var(--etreacy-ui-colors-text);opacity:.7;margin-top:.25rem}.post{max-width:600px;margin:0 auto}.post h1{font-size:2.5rem;font-weight:600;line-height:1.25;letter-spacing:.004em;padding:1.5rem 0 .5rem}.post-content{font-family:var(--serif);line-height:1.6;letter-spacing:.02px;hyphens:auto}.post-content p{margin:1rem 0}.post-content img{border-style:none;height:auto;display:block;max-width:100%}.post-content figcaption{font-family:var(--sans);font-size:.75rem;line-height:1.25;margin-top:-.75rem}.post-content blockquote{font-style:italic;border-left:4px solid var(--etreacy-ui-colors-primary);padding-left:1.5rem;margin:2.5rem 0}.post-content pre{font-family:Menlo,monospace;font-size:14px;padding:16px;color:var(--etreacy-ui-colors-text);overflow:auto}.post-content .highlight{overflow-x:auto;padding:10px 20px;background:#fff;margin:10px 0}.post-content ul,.post-content ol{padding-left:1rem}.writing-list{max-width:640px;margin:0 auto;padding:2rem 1rem}.writing-list h1{font-family:var(--sans);font-size:2rem;font-weight:800;margin-bottom:2rem;color:#333}.post-item{display:grid;grid-template-columns:1fr auto;gap:2rem;line-height:2;margin-bottom:.5rem}.post-item a{text-decoration:none;color:#333;font-size:1.1rem;font-weight:500;transition:c