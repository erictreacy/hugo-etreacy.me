.grid{font-family:var(--sans);align-content:start;display:grid;grid-template-columns:repeat(4,1fr);place-items:start;gap:1.5rem;margin:var(--baseline)0;line-height:1.25;max-width:var(--max-width)}@media screen and (max-width:48rem){.grid{grid-template-columns:repeat(3,1fr);gap:1.25rem}}@media screen and (max-width:30rem){.grid{grid-template-columns:repeat(2,1fr);gap:1rem}}.grid a{text-decoration:none;border-bottom:none;color:var(--theme-ui-colors-text);display:block}.grid a:hover{color:#ff6501}.grid img{width:100%;height:auto;object-fit:cover;display:block;margin:0 0 .5rem}.meta{display:block;color:var(--theme-ui-colors-text);margin-top:-1rem;margin-bottom:1rem;opacity:.7}@media screen and (max-width:30rem){.meta{font-size:.8rem}}