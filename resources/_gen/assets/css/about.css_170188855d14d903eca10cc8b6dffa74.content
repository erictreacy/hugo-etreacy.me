.about-content{max-width:640px;margin:0 auto;padding:2rem 1rem;font-family:var(--sans);color:var(--etreacy-ui-colors-text)}.about-content img{max-width:100%;height:auto;margin:2rem 0;border-radius:4px}.about-content figcaption{text-align:center;color:var(--etreacy-ui-colors-text-secondary);margin-top:.5rem;margin-bottom:2rem;font-family:var(--mono);font-size:.9rem}.about-content h3{margin-top:2.5rem;margin-bottom:1rem;font-family:var(--sans);font-weight:800;font-size:1.25rem}.about-content p{margin:1rem 0;line-height:1.6}.about-content a{text-decoration:none;border-bottom:1px solid var(--etreacy-ui-colors-border);transition:all .2s ease;color:inherit}.about-content a:hover{color:var(--etreacy-ui-colors-primary);border-bottom-color:var(--etreacy-ui-colors-primary)}.about-content em{font-style:italic;font-family:var(--mono);color:var(--etreacy-ui-colors-text-secondary)}@media(max-width:600px){.about-content{padding:1rem}.about-content h3{margin-top:2rem}}